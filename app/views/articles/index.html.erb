<h1 class="text-center mt-4 font-italic">/ Articles list /</h1>
<div class="container">
    <% @articles.each do |article| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic h6 text-muted">
                    by / <%= article.author %> 
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
                    <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                    <%= link_to "View", article_path(article), class:"btn btn-outline-success" %>
                    <%= link_to "Edit", edit_article_path(article), class:"btn btn-outline-info" %>
                    <%= link_to "Delete", article_path(article), class:"btn btn-outline-danger", method: :delete, data: {confirm: 'Are you sure you want to delete this?'} %>
                </div>
                <div class="card-footer text-muted">
                    <small>created (<%= time_ago_in_words(article.created_at) %>) ago / updated (<%= time_ago_in_words(article.updated_at) %>) ago</small>
                </div>
                </div>
            </div>
        </div>
    <% end %>
<button class='btn btn-outline-success' type='Button'><%= link_to 'Create Article', new_article_path %></button>
<button class='btn btn-outline-success' type='Button'><%= link_to 'Home page', root_path %></button>
</div>

